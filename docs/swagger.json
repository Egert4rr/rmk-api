{
    "openapi": "3.0.2",
    "info": {
        "title": "RMK-api",
        "version": "1.0.0",
        "description": "This is a Swagger UI for our Hiking trails API"
    },
    "paths": {
        "/trails": {
            "summary": "get a list of all hiking trails",
            "description": "Returns a list of Hiking trails",
            "get": {
                "tags": [
                    "Trails"
                ],
                "responses": {
                    "200": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "string"
                                    }
                                },
                                "examples": {
                                    "List of Trails": {
                                        "value": [
                                            "Elva jõe",
                                            "Endla järve"
                                        ]
                                    }
                                }
                            }
                        },
                        "description": "Returns a list of trails"
                    }
                },
                "summary": "get a list of all hiking trails",
                "description": "Returns a list fo all Trails in API"
            }
        },
        "/trails/{id}": {
            "get": {
                "requestBody": {},
                "tags": [
                    "details"
                ],
                "parameters": [
                    {
                        "name": "id",
                        "description": "id of the desired trail",
                        "schema": {
                            "type": "string"
                        },
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {}
                                },
                                "examples": {
                                    "gaming": {
                                        "value": {
                                            "id": "1",
                                            "title": "Järvala matkarada", 
                                            "distance": "9 km", 
                                            "location": "test", 
                                            "region": "Harjumaa", 
                                            "picture": "Picture link"
                                        }
                                    }
                                }
                            }
                        },
                        "description": "Returns full details of a given id trail\n"
                    },
                    "404": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/error"
                                },
                                "examples": {
                                    "Trail /w+ was not found": {
                                        "value": {
                                            "error": "Trail \\w+ was not found in trail array."
                                        }
                                    }
                                }
                            }
                        },
                        "description": "Trail was not found "
                    }
                },
                "operationId": "id",
                "summary": "Get full details of a trail",
                "description": "Returns full details of given id trail"
            },
            "put": {
                "tags": [
                    "Edit"
                ],
                "summary": "Update the trail under the given id"
            },
            "parameters": [
                {
                    "name": "id",
                    "description": "id of the desired trail",
                    "schema": {
                        "type": "number"
                    },
                    "in": "path",
                    "required": true
                }
            ]
        }
    },
    "components": {
        "schemas": {
            "error": {
                "title": "Root Type for error",
                "description": "",
                "type": "object",
                "properties": {
                    "error": {
                        "type": "string"
                    }
                },
                "example": {
                    "error": "Error message."
                }
            }
        }
    }
}